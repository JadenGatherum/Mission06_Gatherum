@model Movie
@{
    ViewData["Title"] = "Movie Record";
}

<h1>Movie Record</h1>
<p>You must enter the category, title, year, director, and rating. If you choose not to, it will not record the movie. Otherwise, you will get a confirmation that the movie has been recorded. </p>
<p>Thank you!</p>
<form method="post">
    <label asp-for="Category">Category: </label>
    <input asp-for="Category" />
    <br />
    <label asp-for="Title">Title: </label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year: </label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director: </label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating"> Rating: </label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />
    <label asp-for="Edited"> Edited: </label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>
    <br />
    <label asp-for="Lent">Lent to: </label>
    <input asp-for="Lent"/>
    <br />
    <label asp-for="Notes">Notes: </label>
    <input asp-for="Notes"/>
    <br />
    
    <button type="submit">Submit the movie</button>
</form>