@{
}
@model List<Movie>

<!--
    This section defines a responsive table structure to display movie data.
    The table includes various attributes such as category, title, year, director, rating, etc.
    It dynamically populates the table rows with data from the Model using a foreach loop.
    Each row contains an Edit and Delete button to manage the movie entries.
-->


<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="fw-bold bg-dark text-light">
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>LentTo</th>
                <th>CopiedToPlex</th>
                <th>Notes</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model)
            {
                <tr>
                    <td>@x.Category?.category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.CopiedToPlex</td>
                    <td>@x.Notes</td>
                    <td>
                        <a class="btn btn-info btn-sm" asp-controller="Home" asp-action="Edit" asp-route-id="@x.MovieId">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-controller="Home" asp-action="Delete" asp-route-id="@x.MovieId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
